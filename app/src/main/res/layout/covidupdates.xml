<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Choice"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:ems="10" />

    <Button

        android:id="@+id/coviddasjboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Covid Dashboard"
        android:textSize="25sp"
        android:ems="10"   />

    <Button
        android:id="@+id/covidheatmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:ems="10"
        android:text="Corona Heat Map"
        android:textSize="25sp" />
    <Button

        android:id="@+id/campcentres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:ems="10"
        android:text="Medical Camp centres"

        android:textSize="25sp" />
    <!--<Button
        android:id="@+id/coronawho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:ems="10"
        android:text="Corona virus - WHO"

        android:textSize="25dp" />-->

</androidx.appcompat.widget.LinearLayoutCompat>