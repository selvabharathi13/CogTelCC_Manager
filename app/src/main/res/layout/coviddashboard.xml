<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/download"
            android:text="Corona Dashboard"
            android:textAlignment="center"
            android:textColor="@color/colorgrape"
            android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="138dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:text="Active cases - India"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        tools:ignore="RtlCompat">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:text="14,24,519"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="138dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:text="Recovered - India"
                        android:textAlignment="center"
                        android:textColor="@color/colorgrape"
                        tools:ignore="RtlCompat">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:text="12,23,453"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat">

                    </TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@color/colorgrape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="138dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:text="Deaths - India"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        tools:ignore="RtlCompat">

                    </TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="bottom"
                        android:text="33,524"
                        android:textAlignment="center"
                        tools:ignore="RtlCompat">

                    </TextView>


                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/graph"
                android:textAlignment="center"
                android:textSize="24sp" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>